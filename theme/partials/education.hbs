{{#if resume.education.length}}
<section class="section" id="education">
  <header>
    <h2 class='section-title'>Education</h2>
  </header>

  {{#each resume.education}}
  <section class="education-item">
    {{#if summary}}
      <label for="education-item-{{@index}}"></label>
    {{/if}}
    <header class="clear">
      <div class="date">
        {{#if endDate}}
        <span class="endDate">
        - {{Y endDate}}
        </span>
        {{/if}}
      </div>
      <div class="header-left">
        {{#if studyType}}
        <div class="studyType">
          {{studyType}}
        </div>
        {{/if}}
        {{#if area}}
        <div class="area">({{area}})</div>
        {{/if}}
        {{#if institution}}
        | 
        <div class="institution">
          {{institution}}
        </div>
        {{#if location}}
        <span class="fas fa-map-marker-alt"></span>
        <span class="location">{{location}}</span>
        {{/if}}
        {{/if}}
      </div>
    </header>

    {{#if courses.length}}
    <ul class="courses">
      {{#each courses}}
      <li>{{.}}</li>
      {{/each}}
    </ul>
    {{/if}}

    <div class="item">
      {{#if gpa}}
      <div class='gpa'>
        <strong> Grade:</strong> <span>{{gpa}}</span>
      </div>
      {{/if}}
      {{#if summary}}
        <div class="summary">{{markdownRender summary}}</div>
      {{/if}}
    </div>
  </section>
  {{/each}}
</section>
{{/if}}
